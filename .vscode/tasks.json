{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup-debug-env",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { Set-Item -Path env:VSTEST_HOST_DEBUG -Value '0'; Set-Item -Path env:DOTNET_CLI_TELEMETRY_OPTOUT -Value '1'; Set-Item -Path env:DOTNET_SKIP_FIRST_TIME_EXPERIENCE -Value '1'; Set-Item -Path env:DOTNET_NOLOGO -Value '1'; Set-Item -Path env:VS_DEBUGGER_CAUSAL_LOGGING -Value '0'; Set-Item -Path env:VSJITDEBUGGER -Value ''; Write-Host 'Debug environment configured successfully' -ForegroundColor Green }"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/NginxSpy/NginxSpy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "Debug",
                "--verbosity",
                "quiet"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "dependsOn": "setup-debug-env"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/NginxSpy/NginxSpy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/NginxSpy/NginxSpy.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}