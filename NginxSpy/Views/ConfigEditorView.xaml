<UserControl x:Class="NginxSpy.Views.ConfigEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 页面标题和操作按钮 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="配置编辑" Style="{StaticResource TitleTextStyle}" />
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="新建" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding NewConfigCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="创建新的配置文件" />
                    </Button.ToolTip>
                </Button>
                
                <Button Content="保存" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Command="{Binding SaveConfigCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="保存当前配置文件" />
                    </Button.ToolTip>
                </Button>
                
                <Button Content="验证" 
                        Style="{StaticResource WarningButtonStyle}"
                        Command="{Binding ValidateConfigCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="验证配置文件语法" />
                    </Button.ToolTip>
                </Button>
                
                <Button Content="格式化" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding FormatConfigCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="格式化配置文件" />
                    </Button.ToolTip>
                </Button>
                
                <Button Content="备份" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding BackupConfigCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="备份当前配置文件" />
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 实例选择和状态信息 -->
        <materialDesign:Card Grid.Row="1" Style="{StaticResource StatusCardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 实例选择 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="选择实例:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <ComboBox ItemsSource="{Binding NginxInstances}"
                              SelectedItem="{Binding SelectedInstance}"
                              DisplayMemberPath="Name"
                              MinWidth="200"
                              VerticalAlignment="Center" />
                </StackPanel>

                <!-- 配置文件路径 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <TextBlock Text="配置文件:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding SelectedInstance.ConfigPath}" 
                             VerticalAlignment="Center" 
                             FontFamily="Consolas" 
                             FontSize="12" />
                </StackPanel>

                <!-- 未保存更改指示器 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="ContentSave" 
                                           Width="16" Height="16" 
                                           Foreground="{StaticResource WarningBrush}"
                                           VerticalAlignment="Center" 
                                           Margin="0,0,4,0"
                                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock Text="有未保存的更改" 
                             Foreground="{StaticResource WarningBrush}"
                             VerticalAlignment="Center"
                             Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>

                <!-- 重启nginx按钮 -->
                <Button Grid.Column="3" 
                        Content="重启Nginx" 
                        Style="{StaticResource WarningButtonStyle}"
                        Command="{Binding RestartNginxCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="保存配置并重启nginx进程" />
                    </Button.ToolTip>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- 主编辑区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 配置段列表 -->
            <materialDesign:Card Grid.Column="0" Style="{StaticResource ContentCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 配置段标题 -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewList" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,8,0" />
                            <TextBlock Text="配置段" 
                                     Style="{StaticResource SubtitleTextStyle}" 
                                     VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <!-- 配置段列表 -->
                    <Border Grid.Row="1" 
                            BorderBrush="{StaticResource MaterialDesignDivider}" 
                            BorderThickness="1">
                        <ListBox ItemsSource="{Binding ConfigSections}"
                                 SelectedItem="{Binding SelectedSection}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4">
                                        <materialDesign:PackIcon Kind="ChevronRight" 
                                                               Width="16" Height="16" 
                                                               VerticalAlignment="Center" 
                                                               Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding SectionType}" 
                                                 FontWeight="Bold" 
                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding Name}" 
                                                 Margin="4,0,0,0" 
                                                 VerticalAlignment="Center" 
                                                 Foreground="Gray" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Background="{StaticResource MaterialDesignDivider}" />

            <!-- 配置编辑器 -->
            <materialDesign:Card Grid.Column="2" Style="{StaticResource ContentCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 编辑器标题 -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileEdit" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,8,0" />
                            <TextBlock Text="配置文件编辑器" 
                                     Style="{StaticResource SubtitleTextStyle}" 
                                     VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="最后修改:" 
                                     VerticalAlignment="Center" 
                                     FontSize="12" 
                                     Foreground="Gray" 
                                     Margin="0,0,8,0" />
                            <TextBlock Text="{Binding CurrentConfig.LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                     VerticalAlignment="Center" 
                                     FontSize="12" 
                                     Foreground="Gray" />
                        </StackPanel>
                    </Grid>

                    <!-- 文本编辑器 -->
                    <Border Grid.Row="1" 
                            BorderBrush="{StaticResource MaterialDesignDivider}" 
                            BorderThickness="1" 
                            Margin="0,8">
                        <TextBox x:Name="ConfigTextBox"
                                 Text="{Binding ConfigContent, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Padding="8"
                                 Background="#FAFAFA"
                                 TextWrapping="NoWrap" />
                    </Border>

                    <!-- 状态栏 -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 验证状态 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                   Width="16" Height="16" 
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,4,0"
                                                   Visibility="{Binding CurrentConfig.IsValid, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                   Width="16" Height="16" 
                                                   Foreground="{StaticResource DangerBrush}"
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,4,0">
                                <materialDesign:PackIcon.Visibility>
                                    <Binding Path="CurrentConfig.IsValid" Converter="{StaticResource BooleanToVisibilityConverter}">
                                        <Binding.ConverterParameter>
                                            <x:Static Member="Visibility.Collapsed" />
                                        </Binding.ConverterParameter>
                                    </Binding>
                                </materialDesign:PackIcon.Visibility>
                            </materialDesign:PackIcon>
                            <TextBlock Text="配置有效" 
                                     VerticalAlignment="Center" 
                                     FontSize="12"
                                     Visibility="{Binding CurrentConfig.IsValid, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <TextBlock Text="配置无效" 
                                     VerticalAlignment="Center" 
                                     FontSize="12"
                                     Foreground="{StaticResource DangerBrush}">
                                <TextBlock.Visibility>
                                    <Binding Path="CurrentConfig.IsValid" Converter="{StaticResource BooleanToVisibilityConverter}">
                                        <Binding.ConverterParameter>
                                            <x:Static Member="Visibility.Collapsed" />
                                        </Binding.ConverterParameter>
                                    </Binding>
                                </TextBlock.Visibility>
                            </TextBlock>
                        </StackPanel>

                        <!-- 字符统计 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="字符数:" VerticalAlignment="Center" FontSize="12" Margin="0,0,4,0" />
                            <TextBlock Text="{Binding ConfigContent.Length}" 
                                     VerticalAlignment="Center" 
                                     FontSize="12" 
                                     FontWeight="Bold" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- 加载指示器 -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                           IsIndeterminate="True" 
                           Width="50" Height="50" />
                <TextBlock Text="处理中..." 
                         Foreground="White" 
                         FontSize="16" 
                         HorizontalAlignment="Center" 
                         Margin="0,16,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>